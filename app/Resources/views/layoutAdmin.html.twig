{#ajax order#}
<script>
    $('#sortable-js-slider').sortable({
        axis: 'y',
        update: function (event, ui) {
            var tab = $(this).sortable('toArray');
            $(this).children().each(function (index) {
                $(this).find('#position').html('&#8597; ' + (index + 1))
            });
            $.ajax({
                url: '{{ path('admin-slider-ajax-sort') }}',
                type: "POST",
                data: {
                    "tab": tab
                }
            })
        }
    });
</script>

