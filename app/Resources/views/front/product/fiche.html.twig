{% extends "/layout.html.twig" %}

{% block title %}Title Socle luuug{% endblock %}
{% block metaDescription %}meta Description Socle luuug{% endblock %}

{% block content %}
    <section class="contentPage">
        <div class="container">
            <div class="row">
                <article class="col-6 actu-view">
                    <h2>{{ product.name }}</h2>
                    <div class="row">
                        {% for image in product.images %}
                            <div class="col-md-6">
                                <img src="{{ asset('uploads/products/'~ image.name) }}"
                                     alt="#">
                            </div>
                        {% endfor %}
                    </div>
                    <p>{{ product.description|raw }}</p>
                </article>
            </div>
            <a class="btn" href="{{ path('product-index') }}">Retour</a>
        </div>
    </section>
{% endblock %}