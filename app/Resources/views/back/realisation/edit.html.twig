{% extends "/layoutAdmin.html.twig" %}
{% block content %}
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-xl-10 offset-xl-1 col-12">
                    {% include 'back/_tagAlerte.html.twig' %}
                    <div class="card">
                        <div class="card-header"><b>Modification </b> de la réalisation : "{{ realisation.title }}"
                        </div>
                        <div class="card-body card-block">
                            <div class="form-group">
                                {{ form_start(form) }}
                                <div class="col-12 mb-4">
                                    {{form_row(form.title)}}
                                </div>
                                <div class="col-12 mb-4">
                                    {{form_row(form.description)}}
                                </div>
                                <div class="col-12 mb-4">
                                    {{ form_row(form.images) }}
                                    <div class="mb-2 grid-img">
                                        {% for image  in realisation.images %}
                                            <a href="{{ path('admin-realisation-image-delete', {id:image.id, realisationId:realisation.id}) }}"><i class="fa fa-times"></i></a>
                                            <img src="{{ asset('uploads/realisations/'~image.name) }}" alt="" class="shSizeImg">
                                        {% endfor %}
                                    </div>
                                    <p>
                                        <strong>Taille maximale par image :</strong> 1 Mo<br>
                                        <strong>Formats supportés :</strong> jpg et png
                                    </p>

                                </div>
                                <div class="col-12"><p>Les champs précédés de la mention * sont obligatoires.</p></div>
                                <div class="col-md-6  btn-form-admin">
                                    {{ form_row(form.save) }}
                                    <a href="{{ path('admin-realisations-index') }}" class="btn btn-secondary">Annuler</a>
                                </div>
                                <div class="col-md-6 text-right">
                                    <a data-href="{{ path('admin-realisations-delete', {id: realisation.id}) }}"
                                       data-toggle="modal" class="btn btn-danger text-white"
                                       data-target="#confirm-delete">Supprimer</a>
                                </div>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

