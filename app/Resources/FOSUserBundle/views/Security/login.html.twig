{% trans_default_domain 'FOSUserBundle' %}
{% extends "/layoutLogin.html.twig" %}
{% block content %}
    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <h3>Connexion Ã  l'espace administrateur</h3>
                </div>
                <div class="login-form">
                    {% if error %}
                        <div class="warning-message">L'adresse e-mail ou le mot de passe est incorrect</div>
                    {% endif %}
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        {% endif %}
                        <div class="form-group form-group-first">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}"
                                   required="required" autocomplete="username" class="form-control"/><br>
                        </div>
                        <div class="form-group mb-4">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" id="password" name="_password" required="required"
                                   autocomplete="current-password" class="form-control"/>
                        </div>
                        <button type="submit" class="btn btn-success btn-flat m-b-30 m-t-30" id="_submit"
                                name="_submit">{{ 'security.login.submit'|trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}