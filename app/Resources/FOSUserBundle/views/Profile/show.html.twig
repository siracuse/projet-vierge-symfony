{% trans_default_domain 'FOSUserBundle' %}
{% extends "/layout.html.twig" %}

{% block title %}
    Title Socle luuug
{% endblock %}

{% block h1 %}
    H1 Socle luuug
{% endblock %}

{% block content %}
    <section class="contentPage contactPage">
        <div class="container">

            <div class="row">
                <article class="col-12 col-md-6 offset-md-3 actu profile">
                    <div>
                        <h3 class="title">Mon Profil</h3>
                        <div class="fos_user_user_show">
                            <p><span>Nom:</span> {{ user.name }}</p>
                            <p><span>Prénom:</span> {{ user.firstname }}</p>
                            <p><span>E-mail:</span> {{ user.email }}</p>
                        </div>
                        <div class="pcenter mt-5">
                            <a class="btn" href="{{ path('fos_user_profile_edit') }}">Modifier mon profil</a>
                        </div>
                    </div>
                </article>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="pcenter mt-4">
                        <a class="btn" href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                    </div>
                </div>
            </div>

        </div>
    </section>
{% endblock %}